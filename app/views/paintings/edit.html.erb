<div class="d-flex justify-content-center">
<h1>Edit Painting</h1>
</div>

<div class="container">

<%= simple_form_for(@painting) do |f| %>
  <%= f.input :artist %>
  <%= f.input :title %>
  <%= f.input :price_per_day %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file, required: true %>
  <div class="d-flex justify-content-center mb-5">
    <%= f.button :submit, class: "btn btn-main-customizable" %>
  </div>
<% end %>

</div>
