<div class="giphy" style="margin-top: -16px; background-image: url('https://media.giphy.com/media/3og0IFrHkIglEOg8Ba/giphy.gif')">
  <div class="login-signup-form">
    <h2 class="header" style="margin-top: 2em;">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "login-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
