<%= render 'shared/navbar-dashboard' %>

<div class="d-flex" style="padding-top: 70px;">

  <div class="dashboard-width">

    <%= render 'dashboard-tab-logic' %>

  <div class="tab-content" id="paintings">
    <div class="full-card">
      <% @user.paintings.each do |painting| %>
        <%= link_to (render 'shared/painting-card-dashboard', painting: painting), painting_path(painting), :style=>'color: black; text-decoration: none' %>
      <% end %>
    </div>
  </div>

  <%= render 'dashboard-confirm-bookings' %>

  <%= render 'dashboard-upcoming-bookings' %>

  <div class="tab-content hide-content" id="user-bookmarks">
    <div class="full-card">
      <% @user.bookmarks.each do |bookmark| %>
        <%= link_to (render 'shared/painting-card-dashboard', painting: bookmark.painting), painting_path(bookmark.painting), :style=>'color: black; text-decoration: none' %>
      <% end %>
    </div>
  </div>

</div>

  <%= render 'dashboard-info' %>

</div>
